datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())
  name String 
  description String?
  price Int
  gender String
  image String
  carts Cart[]
  orders Order[]
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String 
  carts Cart[]
  order Order[]
}

model Cart {
  productId Int 
  product Product @relation(fields: [productId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
  quantity Int
  @@id([productId, userId])
}

enum OrderStatus {
  COMPLETED
  PENDING
  CANCLED
}

model Order {
  id Int @id @default(autoincrement())
  date DateTime
  state OrderStatus @default(PENDING)
  productId Int 
  product Product @relation(fields: [productId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
  quantity Int
}
